<%= form_for(:session, url: sessions_path, html: {id: 'session'}) do |f| %>
	<div class="form-group">
		<%= f.label :email %>
		<%= f.email_field :email, :autofocus => true, :id => "email", :class => "form-control", :placeholder => "Enter your email address" %>
	</div>
	<div class="form-group">
		<%= f.label :password %>
		<%= f.password_field :password, :autofocus => true, :id => "password", :class => "form-control", :placeholder => "Enter your password" %>
	</div>
	<%= f.submit "Sign In", :class => "btn btn-default" %>

<% end %>